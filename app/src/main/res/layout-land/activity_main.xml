<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/edit_code_tv"
            android:layout_width="317dp"
            android:layout_height="40dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="47dp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="9sp"
            android:text="@string/enter_code"
            android:textAppearance="@style/enter_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pin_code"
            android:layout_width="317dp"
            android:layout_height="40dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="47dp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="9sp"
            android:maxLength="4"
            android:textAppearance="@style/enter_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_1"
            style="@style/button_rectangle_style"
            android:text="@string/text_1"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@id/btn_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_2" />


        <Button
            android:id="@+id/btn_2"
            style="@style/button_rectangle_style"
            android:layout_marginTop="16dp"
            android:text="@string/text_2"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_code_tv" />


        <Button
            android:id="@+id/btn_3"
            style="@style/button_rectangle_style"
            android:text="@string/text_3"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_2"
            app:layout_constraintTop_toTopOf="@id/btn_2" />

        <Button
            android:id="@+id/btn_4"
            style="@style/button_rectangle_style"
            android:text="@string/text_4"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@id/btn_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_5" />


        <Button
            android:id="@+id/btn_5"
            style="@style/button_rectangle_style"
            android:layout_marginTop="36dp"
            android:text="@string/text_5"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_2" />

        <Button
            android:id="@+id/btn_6"
            style="@style/button_rectangle_style"
            android:text="@string/text_6"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_5"
            app:layout_constraintTop_toTopOf="@id/btn_5" />


        <Button
            android:id="@+id/btn_7"
            style="@style/button_rectangle_style"
            android:text="@string/text_7"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@id/btn_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_8" />


        <Button
            android:id="@+id/btn_8"
            style="@style/button_rectangle_style"
            android:layout_marginTop="36dp"
            android:text="@string/text_8"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_5" />

        <Button
            android:id="@+id/btn_9"
            style="@style/button_rectangle_style"
            android:text="@string/text_9"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_8"
            app:layout_constraintTop_toTopOf="@id/btn_8" />


        <Button
            android:id="@+id/rectangle_10"
            style="@style/button_rectangle_style"
            android:text="@string/clear"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@id/btn_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_0" />

        <Button
            android:id="@+id/btn_0"
            style="@style/button_rectangle_style"
            android:layout_marginTop="36dp"
            android:text="@string/text_0"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_8" />

        <Button
            android:id="@+id/rectangle_12"
            style="@style/button_rectangle_style"
            android:text="@string/OK"
            android:textColor="#1789DB"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_0"
            app:layout_constraintTop_toTopOf="@id/btn_0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>